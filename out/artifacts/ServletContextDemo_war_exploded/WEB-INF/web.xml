<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <!--配置全局参数-->
    <context-param>
        <param-name>address</param-name>
        <param-value>BeiJing</param-value>
    </context-param>


    <servlet>
        <servlet-name>ServletContext</servlet-name>
        <servlet-class>ServletContext01</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ServletContext</servlet-name>
        <url-pattern>/a</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>Properties</servlet-name>
        <servlet-class>ServletgetProperties</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Properties</servlet-name>
        <url-pattern>/p</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CountServlet</servlet-name>
        <servlet-class>CountServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Request01</servlet-name>
        <servlet-class>HttpServletRequestDemo.Request01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Request02</servlet-name>
        <servlet-class>HttpServletRequestDemo.Request02</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Response01</servlet-name>
        <servlet-class>ResponseDemo.Response01</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Servlet</servlet-name>
        <servlet-class>DownLoadDemo.Servlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Servlet</servlet-name>
        <url-pattern>/dl</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Response01</servlet-name>
        <url-pattern>/rsp01</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Request02</servlet-name>
        <url-pattern>/re02</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Request01</servlet-name>
        <url-pattern>/re01</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>CountServlet</servlet-name>
        <url-pattern>/count</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>



</web-app>